# Dona MCP Toolbox Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# GITHUB INTEGRATION (Optional)
# ===========================================
# Get your token at: https://github.com/settings/tokens
# Scopes needed: repo, user (for private repo access)
GITHUB_TOKEN=your_github_personal_access_token_here

# ===========================================
# WEATHER API (Optional)
# ===========================================
# Get your free API key at: https://openweathermap.org/api
WEATHER_API_KEY=your_openweathermap_api_key_here

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Available levels: error, warn, info, debug
LOG_LEVEL=info

# ===========================================
# PERFORMANCE SETTINGS (Optional)
# ===========================================
# Cache TTL in milliseconds (default: 5 minutes)
CACHE_TTL=300000

# Request timeout in milliseconds (default: 30 seconds)
REQUEST_TIMEOUT=30000

# Maximum retry attempts (default: 3)
MAX_RETRIES=3

# ===========================================
# PUPPETEER SETTINGS (Optional)
# ===========================================
# Run browser in headless mode (true/false)
PUPPETEER_HEADLESS=true

# Browser viewport width
PUPPETEER_VIEWPORT_WIDTH=1920

# Browser viewport height
PUPPETEER_VIEWPORT_HEIGHT=1080

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable development mode features
NODE_ENV=development

# Enable detailed error stack traces
DEBUG_MODE=false